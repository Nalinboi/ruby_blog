<h1>Listing Articles</h1>
 
<table>
  <tr>
    <th>Article ID</th>
    <th>Title</th>
    <th>Text</th>
    <th>Author ID</th>
    <th>Author</th>
    <th></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.id %></td>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= article_author(article) %></td>
      <td><%= article_author(article, false) %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Destroy', article_path(article),
            method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

