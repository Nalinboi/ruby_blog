<h1>Listing Users</h1>
<h2><%= link_to 'Create User', new_user_url %></h2>

<table>
  <tr>
    <th>Name</th>
    <th>Initials</th>
    <th></th>
  </tr>
 
  <% @users.each do |u| %>
    <tr>
      <td><%= u.name %></td>
      <td><%= u.letter %></td>
      <td><%= link_to 'Show', user_path(u) %></td>
      <td><%= link_to 'Edit', edit_user_path(u) %></td>
      <td><%= link_to 'Destroy', user_path(u),
            method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Back', welcome_index_url %>

